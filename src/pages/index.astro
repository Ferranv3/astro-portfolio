---
import { defaultLanguage, supportedLanguages } from "../i18n/translations";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Redirecting…</title>
    <meta http-equiv="refresh" content={`0;url=/${defaultLanguage}/`} />
    <script is:inline>
      (function () {
        const supported = {JSON.stringify(supportedLanguages)};
        const fallback = {JSON.stringify(defaultLanguage)};
        const browserLang = (navigator.language || navigator.userLanguage || "")
          .toLowerCase()
          .split("-")[0];
        const target = supported.includes(browserLang) ? browserLang : fallback;
        const destination = `/${target}/`;
        if (window.location.pathname !== destination) {
          window.location.replace(destination);
        }
      })();
    </script>
  </head>
  <body>
    <p>Redirecting…</p>
  </body>
</html>
