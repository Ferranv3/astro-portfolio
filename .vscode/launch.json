{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Astro: Dev + Chrome (auto)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "pattern": "(https?://localhost:\\d+/?)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}
